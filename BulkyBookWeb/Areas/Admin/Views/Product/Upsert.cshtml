        <div class="mb-3 col-6">
            <label asp-for="product.CategoryId"> </label>
            <select asp-items="@Model.CatList" class="form-control" asp-for="product.CategoryId">
                <option disabled selected>-- Select  --</option>
            </select>
            <span asp-validation-for="product.CategoryId" class="text-danger"> </span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="product.CoverTypeId"> </label>
            <select asp-items="@Model.CTList" class="form-control" asp-for="product.CoverTypeId">
                <option disabled selected>-- Select --</option>
            </select>

            <span asp-validation-for="product.CoverTypeId" class="text-danger"> </span>
        </div>

        <div class="row">
            <div class="mb-3 col-3">
                <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    Back to list
                </a>
            </div>

        </div>
    </div>
</form>

